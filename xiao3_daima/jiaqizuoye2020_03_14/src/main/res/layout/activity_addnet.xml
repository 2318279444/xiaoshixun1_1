        android:text="+"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="33dp"
        android:id="@+id/shu"
        android:text="XX"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="33dp"
        android:id="@+id/jian"
        android:text="--"/>


</LinearLayout>