<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B2155"
    android:orientation="vertical"
    tools:context=".shouye_fragment.Shouye_XQ">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/Shouye_XQ_ima"
        android:layout_weight="8"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#fff"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_weight="0.6"
        android:id="@+id/Shouye_XQ_name"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="22dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:id="@+id/Shouye_XQ_time"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_height="wrap_content"
            android:text="分钟"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="22dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:id="@+id/Shouye_XQ_sy"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="22dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="中国大陆上映"/>
    </LinearLayout>
<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="9"-->
<!--        android:id="@+id/recyc_Shouye_Movie_XQ"/>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="33dp"
        android:text="详细信息"
        android:id="@+id/Shouye_Movie_XQ_MX"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="写影评"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="#FAD602"
            android:id="@+id/Shouye_XQ_readepj"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="选座购票"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="#F7174E"
            android:id="@+id/Shouye_XQ_group"/>

    </LinearLayout>

</LinearLayout>