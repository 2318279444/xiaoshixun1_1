<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/shouyebj2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="233dp">
        <ImageView
            android:layout_marginTop="36dp"
            android:layout_marginLeft="36dp"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/Shouye_jijiang_ima"/>

        <LinearLayout
            android:layout_marginTop="36dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="30dp"
                android:textStyle="bold"
                android:id="@+id/Shouye_jijiang_moviename"/>





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:id="@+id/Shouye_jijiang_ritime"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="日上映"/>

            </LinearLayout>




            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:id="@+id/Shouye_jijiang_personnumber"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="人想看"/>

            </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/jijiang_yuyue"
                android:background="@drawable/yuyuet"/>



        </LinearLayout>
    </LinearLayout>


</LinearLayout>