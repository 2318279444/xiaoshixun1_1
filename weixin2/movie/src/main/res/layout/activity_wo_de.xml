<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#12244E"
    android:layout_height="match_parent"
    tools:context="fragment.WoDe">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="@dimen/dp_30"
            android:gravity="center"
            android:textColor="#FFF"
            android:text="我的"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wode_xinxi_ima"
            android:background="@drawable/xinxi"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="550dp"
            />


    </RelativeLayout>
    
    
    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:id="@+id/pexinxi"
        android:background="#1D1E5A"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/imahea_wode"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:layout_marginTop="50dp"
            android:textColor="#fff"
            android:textSize="33dp"
            android:id="@+id/text_wode"/>


    </LinearLayout>
    
    
    

    <Button
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1D1E5A"
        android:textColor="#fff"
        android:textSize="22dp"
        android:text="电影票"
        android:id="@+id/wode_dyp"/>



    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:background="#1D1E5A"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:id="@+id/wode_guanzhu"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/guanzhu"/>
                <TextView
                    android:layout_below="@+id/wode_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:text="我的关注"/>

            </LinearLayout>

           </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_marginLeft="50dp"
                android:id="@+id/wode_yuyue"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yuyue"/>
                <TextView
                    android:layout_below="@+id/wode_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:text="我的预约"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:id="@+id/wode_goupiaojilu"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/goupiaojilu"/>
                <TextView
                    android:layout_below="@+id/wode_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:text="购票记录"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>










    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#1D1E5A"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                android:id="@+id/wode_kanguomoview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kanguo"/>
                <TextView
                    android:layout_below="@+id/wode_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:text="看过的电影"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:id="@+id/wode_pnglun"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mypinglun"/>
                <TextView
                    android:layout_below="@+id/wode_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:text="我的评论"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                android:id="@+id/wode_yijianfankui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yijianfankui"/>
                <TextView
                    android:layout_below="@+id/wode_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:text="意见反馈"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>










    <LinearLayout
        android:background="#1D1E5A"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                android:id="@+id/wode_shezhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shezhi"/>
                <TextView
                    android:layout_below="@+id/wode_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:text="设置"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>





</LinearLayout>